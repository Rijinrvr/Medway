doctype html
html
    head
        title Medicines
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(href='/css/style.css', type="text/css")
    body
        .container
            nav.navbar.navbar-expand-md.navbar-dark.bg-primary.fixed-top
                a.navbar-brand(href='#') Medway 
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='/') Home
                        li.nav-item
                            a.nav-link(href='/medicine/add') Add Medicines
                        li.nav-item
                            a.nav-link(href='/search') Search
                        li.nav-item
                            a.nav-link(href='/user/login') Logout
                       
        .container
            br
            br
            br
            != messages('message', locals)
            if errors
                each error in errors
                    div(class='alert alert-danger') #{error.msg}
            block content
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bootstrap/js/bootstrap.js')
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")